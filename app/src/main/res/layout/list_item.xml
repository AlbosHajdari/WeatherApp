<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/parentConstraintLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
            android:id="@+id/maxTextViewListItem"
            android:text="Max:"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/minTextViewListItem"
            app:layout_constraintStart_toStartOf="@+id/minTextViewListItem"
            app:layout_constraintEnd_toEndOf="@+id/minTextViewListItem"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:id="@+id/minTemperaturaTextViewListItem"
            android:text="MIN"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/minTextViewListItem"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/minTextViewListItem"/>
    <TextView
            android:id="@+id/minTextViewListItem"
            android:text="Min:"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/ditaDheDataTextViewListItem"
            app:layout_constraintStart_toStartOf="@+id/ditaDheDataTextViewListItem"
            app:layout_constraintEnd_toEndOf="@+id/ditaDheDataTextViewListItem"
            app:layout_constraintHorizontal_bias="0.216"/>
    <TextView
            android:id="@+id/maxTemperaturaTextViewListItem"
            android:text="MAX"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/minTemperaturaTextViewListItem"
            app:layout_constraintStart_toStartOf="@+id/minTemperaturaTextViewListItem"
            app:layout_constraintEnd_toEndOf="@+id/minTemperaturaTextViewListItem"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:id="@+id/iconImageViewListItem"
            android:layout_width="90dp"
            android:layout_height="74dp"
            tools:srcCompat="@tools:sample/avatars[0]"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:id="@+id/pershkrimiMotitTextViewListItem"
            android:text="PERSHKRIMI I MOTIT"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/iconImageViewListItem"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            android:layout_marginEnd="8dp"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="179dp"
            android:id="@+id/guideline6"/>
    <TextView
            android:id="@+id/ditaDheDataTextViewListItem"
            android:text="DITA DHE DATA"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintStart_toEndOf="@+id/iconImageViewListItem"/>

    <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:id="@+id/viewListItem"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@+id/pershkrimiMotitTextViewListItem"
            android:layout_marginTop="20dp"/>
</android.support.constraint.ConstraintLayout>